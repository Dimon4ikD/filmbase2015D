.list-group
  =link_to banner, class: 'list-group-item' do
    .media
      -if banner.image?
        .media-left=image_tag banner.image.url(:thumb), class: 'media-object'
      .media-body
        %h4.media-heading=banner.film.name

        %h4.media-heading=banner.frequency
        %h4.media-heading=banner.click



